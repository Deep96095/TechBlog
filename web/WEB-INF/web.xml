<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.tech.blog.servlet.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.tech.blog.servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.tech.blog.servlet.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>edit</servlet-name>
        <servlet-class>com.tech.blog.servlet.edit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addpost</servlet-name>
        <servlet-class>com.tech.blog.servlet.addpost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>likeservelet</servlet-name>
        <servlet-class>com.tech.blog.servlet.likeservelet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LikedServ</servlet-name>
        <servlet-class>com.tech.blog.servlet.LikedServ</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>edit</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addpost</servlet-name>
        <url-pattern>/addpost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>likeservelet</servlet-name>
        <url-pattern>/likeservelet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LikedServ</servlet-name>
        <url-pattern>/LikedServ</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
